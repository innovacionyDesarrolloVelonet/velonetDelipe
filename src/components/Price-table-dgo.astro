---
interface Props {
	canales: string;
    text: string;
    name: string;
    image: string
}

const { canales, text, name, image } = Astro.props;
---

<div class="coluna-planos group hover:-translate-y-1 duration-300 w-72 px-6 py-12 flex flex-col items-center relative">
    <div class="flex flex-row items-center gap-2">
        <div><h3 class="text-6xl font-bold">{canales}</h3></div>
        <div class="flex flex-col">
            <span class="text-white">CANALES</span>
            <span class="text-secondary text-xs">DGO {name}</span>
        </div>
    </div>
    <div onclick="showPopuptv()" class="flex cursor-pointer flex-row gap-2 mt-6 ml-6 items-center">
        <img class="h-6" src="/images/mais.svg" alt="">
        <span class="text-sm">{text}</span>
    </div>  
    <a href="https://wa.me/573336081044?text=%20%C2%A1Hola!%20vengo%20del%20sitio%20web" target="_blank" rel="noopener noreferrer"><button class="sign-up-btn w-full rounded-full font-bold mt-6 bg-gradient-to-r from-secondary to-primary text-white py-2 px-8 uppercase">COMPRA AHORA</button></a>
    <p class="text-sm text-white/50 font-light mt-6 text-center">*Organizado por categorías, incluye Mi Lista.</p>
    <p class="text-sm text-white/50 font-light mt-6 text-center">*Aplican términos y condiciones</p>
</div>

<div id="popuptv" class="fixed animate-fade inset-0 snap-center flex items-center justify-center bg-black bg-opacity-50 z-50 hidden">
    <div class="flex justify-center items-center">
        <button id="closePopuptv" onclick="closePopuptv()" class="absolute max-lg:top-5 max-lg:right-5 top-20 right-20 text-red-500 bg-white w-12 rounded-full hover:text-gray-800 text-2xl">
            &times;
          </button>
        <img class="w-[60%] max-lg:w-full rounded-2xl" src={image} alt="">
    </div>
</div>
