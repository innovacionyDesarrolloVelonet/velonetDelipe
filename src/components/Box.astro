---
interface Props {
	title: string;
    image: string;
    subtitle: string;
}

const { title, image, subtitle } = Astro.props;
---
<div class="flex flex-col hover:-translate-y-1 duration-300">
    <img class="z-20" src={image} alt="">
    <div class="bg-[#f3f7fb] flex flex-col px-4 items-start w-[250px] rounded-2xl -mt-12">
        <h2 class="text-[#293659] font-bold text-2xl mt-16">{title}</h2>
        <img class="mt-3" src="/images/Lineorange.png" alt="">
        <h3 class="text-black/70 mt-6 mb-4">{subtitle}</h3>
    </div>
</div>
               